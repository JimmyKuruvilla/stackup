<% if current_user.admin %>
<div class="redbar">
ADMIN
</div>
<% end %>

<h2 >Welcome <%= @user.name%> </h2>

  <% if flash[:notice] %>
      <a><div class="notice"><%= flash[:notice] %></div></a>
  <% end %>

<div class="text-right container-fluid col-md-12">
  <%= form_for @user do |f| %><br>
    <p>If you'd like to recieve emails at an address other than the<br>one listed on your GitHub account, please enter it here: </p><br>
  <%= f.text_field :email, placeholder: "@user.email", autofocus: true %>
  <%= f.submit "Update" %>
  <% end %>

</div>

<div class="col-md-12">
<h4 class="text-left">These questions need your answers:</h4>
<ol class="text-left">
<%= render partial: "question", collection: @questions %>
</ol>

</div>
